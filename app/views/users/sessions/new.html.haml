- content_for :title, 'Log in'
%h1.text-center Log in
%br
%br

= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
  - if flash[:alert]
    .row
      .col-sm-6.col-sm-offset-3
        .alert.alert-danger= flash[:alert]
  = f.input :remember_me, as: :hidden, value: true if devise_mapping.rememberable?
  .row= f.input :email, required: false, autofocus: true, wrapper_html: { class: 'col-sm-6 col-sm-offset-3' }
  .row= f.input :password, required: false, wrapper_html: { class: 'col-sm-6 col-sm-offset-3' }
  .row
    .col-sm-6.col-sm-offset-3= f.submit 'Login', class: 'btn btn-info btn-block'