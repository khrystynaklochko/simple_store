- content_for :title do
  All categories

%h1 All categories
%br

- if @categories.size > 0
  %table.table.table-striped
    %thead
      %tr
        %th.col-xs-10 Name
        %th.col-xs-2

    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td.text-right
            = link_to 'edit', edit_admin_category_path(category)
            |
            = link_to 'destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'new category', new_admin_category_path, class: 'btn btn-info'