- content_for :title, 'Sign up'
%h1.text-center Sign up
%br
%br

= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  .row
    .col-sm-6.col-sm-offset-3= f.error_notification
  .row= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'col-sm-6 col-sm-offset-3' }
  .row= f.input :password, required: true, wrapper_html: { class: 'col-sm-6 col-sm-offset-3' }
  .row= f.input :password_confirmation, required: true, wrapper_html: { class: 'col-sm-6 col-sm-offset-3' }
  .row
    .col-sm-6.col-sm-offset-3= f.submit 'Sign up', class: 'btn btn-info btn-block'